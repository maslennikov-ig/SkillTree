// Prisma schema for SkillTree database
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================================
// Core User Authentication
// ============================================================================

model User {
  id               String   @id @default(cuid())
  telegramId       BigInt   @unique
  telegramUsername String?
  firstName        String?
  lastName         String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Data retention (FR-038): Expires 3 years after last activity
  // Initially null, set by application on first activity to createdAt + 3 years
  // Updated on user activity (login, answer submission, etc.)
  retentionExpiresAt DateTime?

  // Relations
  student           Student?
  parent            Parent?
  dailyStreak       DailyStreak?
  achievements      Achievement[]
  referralsSent     ReferralTracking[] @relation("Referrer")
  referralsReceived ReferralTracking[] @relation("Referee")

  @@index([telegramId])
  @@index([retentionExpiresAt]) // For efficient querying of expired users
}

// ============================================================================
// Student and Parent Profiles
// ============================================================================

enum Gender {
  MALE
  FEMALE
  NOT_SPECIFIED
}

model Student {
  id        String   @id @default(cuid())
  userId    String   @unique
  age       Int
  grade     Int
  gender    Gender   @default(NOT_SPECIFIED)
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  testSessions    TestSession[]
  parentRelations ParentStudent[]
  parentLinkCode  ParentLinkCode?

  @@index([userId])
}

model Parent {
  id            String   @id @default(cuid())
  userId        String   @unique
  email         String?
  emailVerified Boolean  @default(false) // T016: Email verification status
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  children ParentStudent[]

  @@index([userId])
  @@index([email])
}

// ============================================================================
// Parent-Student Relationships (Junction Table)
// ============================================================================

model ParentStudent {
  id        String   @id @default(cuid())
  parentId  String
  studentId String
  createdAt DateTime @default(now())

  // Relations
  parent  Parent  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([parentId, studentId])
  @@index([parentId])
  @@index([studentId])
}

// ============================================================================
// Test Sessions and Questions
// ============================================================================

enum SessionStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

model TestSession {
  id          String        @id @default(cuid())
  studentId   String
  status      SessionStatus @default(IN_PROGRESS)
  startedAt   DateTime      @default(now())
  completedAt DateTime?

  // FSM state fields (T008)
  currentStep    Int       @default(0) // FSM instruction pointer (0-54)
  answeredJSON   Json      @default("{}") // Answers as {questionId: value}
  reminderSentAt DateTime? // 12h reminder tracking
  updatedAt      DateTime  @updatedAt

  // Gamification fields
  points                Int  @default(0)
  badges                Json @default("[]")
  completionTimeMinutes Int?
  shareCount            Int  @default(0)

  // Relations
  student    Student     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  answers    Answer[]
  testResult TestResult?

  @@index([studentId])
  @@index([status])
}

enum QuestionType {
  MULTIPLE_CHOICE
  RATING_SCALE
  VISUAL_SELECTION
  OPEN_ENDED
  BINARY_CHOICE
}

model Question {
  id            String       @id @default(cuid())
  text          String
  category      String
  questionType  QuestionType @default(MULTIPLE_CHOICE)
  difficulty    Int          @default(3)
  sectionNumber Int
  orderIndex    Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // RIASEC fields (T009)
  primaryDimension String // R/I/A/S/E/C
  riasecWeights    Json? // {R:0, I:1, A:0.3...}
  isEasterEgg      Boolean @default(false)
  hint             String? // Easter egg hint text
  ratingRange      Json?   // {min:1, max:5, labels:{min:"...", max:"..."}}

  // Relations
  answers Answer[]
  options QuestionOption[]

  @@index([category])
  @@index([orderIndex])
  @@index([sectionNumber])
}

model Answer {
  id         String   @id @default(cuid())
  sessionId  String
  questionId String
  answerText String
  answeredAt DateTime @default(now())

  // Relations
  session  TestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, questionId])
  @@index([sessionId])
  @@index([questionId])
}

// ============================================================================
// Gamification System
// ============================================================================

model DailyStreak {
  id            String    @id @default(cuid())
  userId        String    @unique
  currentDay    Int       @default(0)
  weeklyPoints  Int       @default(0)
  weekStartDate DateTime
  lastCheckIn   DateTime?
  longestStreak Int       @default(0)
  totalCheckIns Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([weekStartDate])
}

enum BadgeType {
  BRONZE_EXPLORER
  SILVER_SEEKER
  GOLD_ACHIEVER
  PLATINUM_MASTER
  SPEED_DEMON
  THOUGHTFUL_ANALYST
  STREAK_3_DAYS
  STREAK_7_DAYS
  REFERRAL_BRONZE
  REFERRAL_SILVER
  REFERRAL_GOLD
  NIGHT_OWL
  EARLY_BIRD
  DETECTIVE
}

model Achievement {
  id        String    @id @default(cuid())
  userId    String
  badgeType BadgeType
  metadata  Json?
  earnedAt  DateTime  @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeType])
  @@index([userId])
  @@index([badgeType])
}

enum ReferralStatus {
  PENDING
  COMPLETED
  REWARDED
}

model ReferralTracking {
  id            String         @id @default(cuid())
  referrerId    String
  refereeId     String
  referralCode  String         @unique
  status        ReferralStatus @default(PENDING)
  rewardClaimed Boolean        @default(false)
  createdAt     DateTime       @default(now())
  convertedAt   DateTime?

  // Relations
  referrer User @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referee  User @relation("Referee", fields: [refereeId], references: [id], onDelete: Cascade)

  @@index([referrerId])
  @@index([refereeId])
  @@index([referralCode])
}

// ============================================================================
// RIASEC Test System (T010-T015)
// ============================================================================

// T010: Question answer options with RIASEC scoring
model QuestionOption {
  id         String  @id @default(cuid())
  questionId String
  text       String
  emoji      String?
  value      String
  scores     Json // RIASECScores: {R:0, I:1, A:0.3, S:0, E:0, C:0}
  order      Int

  // Relations
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

// T015: Career outlook enum
enum CareerOutlook {
  GROWING
  STABLE
  DECLINING
}

// T015: Career demand level enum
enum DemandLevel {
  HIGH
  MEDIUM
  LOW
}

// T011: Career database with RIASEC profiles
model Career {
  id             String        @id @default(cuid())
  title          String
  titleRu        String
  description    String
  riasecProfile  Json // RIASECScores: {R:30, I:90, A:35, S:25, E:30, C:75}
  salaryMin      Int
  salaryMax      Int
  salarySource   String
  category       String
  requiredSkills String[]
  educationPath  String[]
  universities   String[]
  outlook        CareerOutlook
  demandLevel    DemandLevel

  @@index([category])
}

// T012: Calculated test results
model TestResult {
  id              String   @id @default(cuid())
  sessionId       String   @unique
  riasecProfile   Json // Calculated RIASECScores
  topCareers      Json // CareerMatch[] array
  personalityType String
  hollandCode     String // Top-3 code (e.g., "RIC")
  radarChartUrl   String?
  shareCardUrl    String?
  shareToken      String?  @unique // URL-safe token for public sharing
  createdAt       DateTime @default(now())

  // Relations
  session TestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([shareToken])
}

// ============================================================================
// Parent Verification System (T013-T014)
// ============================================================================

// T013: Email verification codes for parents
model EmailVerification {
  id        String   @id @default(cuid())
  userId    String
  email     String
  code      String // 4-digit code
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([code])
}

// T014: Parent-student linking codes
model ParentLinkCode {
  id        String   @id @default(cuid())
  studentId String   @unique
  code      String   @unique // 6-char alphanumeric
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([code])
}
