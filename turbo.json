{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "@skilltree/bot#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@skilltree/database#build", "@skilltree/shared#build"]
    },
    "@skilltree/bot#build": {
      "dependsOn": ["@skilltree/database#build", "@skilltree/shared#build"],
      "outputs": ["dist/**"]
    }
  }
}
