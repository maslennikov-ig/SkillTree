# =============================================================================
# SkillTree Telegram Bot - Environment Configuration
# =============================================================================

# =============================================================================
# REQUIRED: Core Bot Configuration
# =============================================================================

# Telegram bot API token (REQUIRED)
# Get from: @BotFather on Telegram → /newbot or /token
TELEGRAM_BOT_TOKEN=""

# API URL for bot to call API endpoints (REQUIRED for Share/PDF/Email features)
# Development: http://localhost:4000
# Production: https://api.skilltree.ru or internal URL
API_URL="http://localhost:4000"

# =============================================================================
# REQUIRED: Database
# =============================================================================

# PostgreSQL connection string (shared with API)
# Get from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?sslmode=require"

# =============================================================================
# OPTIONAL: Logging
# =============================================================================

# Log level (trace | debug | info | warn | error | fatal)
# Development: debug, Production: info
LOG_LEVEL="debug"

# Node environment
NODE_ENV="development"

# =============================================================================
# OPTIONAL: Rate Limiting (uses Redis from root config)
# =============================================================================

# Enable rate limiting (default: true in production)
RATE_LIMIT_ENABLED=true

# Commands per minute per user (default: 20)
RATE_LIMIT_COMMANDS=20

# Quiz answers per minute per user (default: 10)
RATE_LIMIT_ANSWERS=10

# =============================================================================
# OPTIONAL: Session Configuration
# =============================================================================

# Quiz session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Reminder notification delay in hours (default: 12)
REMINDER_DELAY_HOURS=12

# =============================================================================
# OPTIONAL: Feature Flags (inherited from root, can override)
# =============================================================================

# Override root feature flags if needed
# FEATURE_GAMIFICATION_ENABLED=true
# FEATURE_PARENT_REPORTS_ENABLED=true
# FEATURE_EMAIL_VERIFICATION_ENABLED=true
# FEATURE_REFERRAL_SYSTEM_ENABLED=true
# FEATURE_SHARE_CARDS_ENABLED=true
